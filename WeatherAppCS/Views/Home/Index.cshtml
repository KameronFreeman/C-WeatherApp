@model WeatherModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Weather Application</h1>
    <form asp-asp-controller="Home" asp-action="GetWeatherDetails" method="post">
        <div>
            <input type="text" name="location" required/>
            <input type="submit" value="Submit" />
        </div>
    </form>
    <br />
    <br />
   @if(Model != null){
        <h5>City : @Model.location.name </h5> <br />
        <h5>Country : @Model.location.region @Model.location.country </h5> <br />
        <h5>Time : @Model.location.localtime </h5> <br />
        <h5>Temperature : @Model.current.temperature </h5><br />
        <h5>Weather Description : @Model.current.weather_descriptions[0].ToString()</h5><br />
    }else if (ViewData.ContainsKey("IsFormSubmitted") && (bool)ViewData["IsFormSubmitted"])
    {
        <p>@ViewData["Message"]</p>
    } 
</div>
